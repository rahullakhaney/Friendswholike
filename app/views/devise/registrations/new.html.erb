<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: "shared/message" %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%#= f.label :first_name %>
        <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "First Name", class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%#= f.label :last_name %>
        <%= f.text_field :last_name, required: true, placeholder: "Last Name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%#= f.label :email %>
    <%= f.email_field :email, required: true, placeholder: "Email Address", class: "form-control" %>
  </div>

  <div class="form-group">
    <%#= f.label :password %>
    <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Register", class: "btn btn-success btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
